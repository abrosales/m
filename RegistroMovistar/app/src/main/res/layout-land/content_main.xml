<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/lbl_usuario"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_usuario"
        android:layout_below="@+id/lbl_usuario"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:id="@+id/lbl_contraseña"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txt_usuario"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_contraseña"
        android:layout_below="@+id/lbl_contraseña"
        android:layout_centerHorizontal="true" />

    <Button
        android:textSize="20dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Entrar"
        android:id="@+id/btn_entrar"
        android:layout_marginTop="21dp"
        android:onClick="onclick"
        android:layout_below="@+id/txt_contraseña"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
